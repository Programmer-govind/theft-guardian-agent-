<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background_light">#F4F5F7</color>
    <color name="black">#FF000000</color>
    <color name="primary_brand">#0052CC</color>
    <color name="purple_500">#6200EE</color>
    <color name="secondary_accent">#00B8D9</color>
    <color name="surface_white">#FFFFFF</color>
    <color name="text_main">#172B4D</color>
    <color name="white">#FFFFFFFF</color>
    <style name="Theme.TheftGuardian" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_brand</item>
        <item name="colorOnPrimary">@color/surface_white</item>
        <item name="colorPrimaryContainer">@color/secondary_accent</item>

        <item name="colorSecondary">@color/secondary_accent</item>
        <item name="colorOnSecondary">@color/text_main</item>

        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_main</item>

        <item name="android:statusBarColor">@color/primary_brand</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/surface_white</item>

        <item name="android:colorBackgroundCacheHint">@color/background_light</item>

    </style>
    <style name="Widget.OrdersFree.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>
</resources>